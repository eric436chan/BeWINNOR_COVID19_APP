<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- White theme -->
    <style name="Theme.white" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    <!-- Dark theme -->
    <style name="Theme.dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.splash" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/s_image</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>
</resources>
